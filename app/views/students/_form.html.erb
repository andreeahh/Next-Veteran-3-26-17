<style>
  .form-group{
    margin-bottom: 15px;
  }

  label{
    margin-bottom: 15px;
  }

  input,
  input::-webkit-input-placeholder {
    font-size: 11px;
    padding-top: 3px;
  }

  .main-login{
    background-color: #fff;
    /* shadows and rounded borders */
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);

  }
  .control-label{

    font-size: 14px;
    font-weight: 600;
    color: #fff;
  }
  .form-control {
    height: auto!important;
    padding: 8px 12px !important;
  }
  .input-group {
    -webkit-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;
    -moz-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;
    box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;

  }
  #button {
    border: 1px solid #ccc;
    margin-top: 28px;
    padding: 6px 12px;
    color: #666;
    text-shadow: 0 1px #fff;
    cursor: pointer;
    -moz-border-radius: 3px 3px;
    -webkit-border-radius: 3px 3px;
    border-radius: 3px 3px;
    -moz-box-shadow: 0 1px #fff inset, 0 1px #ddd;
    -webkit-box-shadow: 0 1px #fff inset, 0 1px #ddd;
    box-shadow: 0 1px #fff inset, 0 1px #ddd;
    background: #f5f5f5;
    background: -moz-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f5f5f5), color-stop(100%, #eeeeee));
    background: -webkit-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
    background: -o-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
    background: -ms-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
    background: linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#f5f5f5', endColorstr='#eeeeee', GradientType=0);
  }
  .main-center{
    margin-top: 30px;
    margin: 0 auto;
    max-width: 400px;
    padding: 10px 40px;
    background:#009edf;
    color: #FFF;
    text-shadow: none;
    -webkit-box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.31);
    -moz-box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.31);
    box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.31);

  }
  span.input-group-addon i {
    color: #009edf;
    font-size: 17px;
  }

  .submit-button{
    margin-top: 5px;
    border-radius: 0% !important;
  }

 #student_campus_id{
   width: 200px !important;
 }
 option{
   padding: 0.8em;
 }
  .new-student{
    display: block;
    margin: 0 auto;
    /*
    background-color: #003768;
    */
    background-color: rgba(0, 55, 104, 0.8);
    max-width: 31%;
    padding: 1.8em;
  }
</style>

<%= form_for(student ,  html: {class: "new-student"}) do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :student_id ,'Please Enter Your Student ID', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-address-card-o" aria-hidden="true"></i></span>
           <%= f.number_field :student_id, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :campus_id , 'Please Select Your Campus', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
    <%= f.collection_select :campus_id, Campus.all, :id, :campus_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
      </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :first_name,  class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
           <%= f.text_field :first_name, class: 'form-control'%>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :last_name,  class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
    <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :phone, class: 'cols-sm-2 control-label' %>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
    <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :email, class: 'cols-sm-2 control-label'  %>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
    <%= f.text_field :email, class: 'form-control'%>
        </div>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :federal_benefit_id , 'Please Select Your Federal Benefit', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <%= f.collection_select :federal_benefit_id, FederalBenefit.all, :id, :benefit_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state_benefit_id , 'Please Select Your State Benefit', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <%= f.collection_select :state_benefit_id, StateBenefit.all, :id, :benefit_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
        </div>
      </div>
    </div>

 <div class="form-group ">
  <div class="actions">
    <%= f.submit 'Proceed', class: 'btn btn-primary btn-lg btn-block submit-button' %>
  </div>
 </div>
<% end %>
