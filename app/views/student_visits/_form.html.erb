
<style>

  form{
    padding: 1.5em;
  }
  .form-control {
    height: auto!important;
    padding: 8px 12px !important;
  }

</style>

<style>
  table tr td{
    border: 1px solid #eeeeee;
  }
  .media-object{
    border-radius: 100%;
  }
  .checkbox{
    width: 122px;
  }
</style>

<%= form_for(student_visit) do |f| %>
    <% if student_visit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(student_visit.errors.count, "error") %> prohibited this student_visit from being saved:</h2>

          <ul>
            <% student_visit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :student_id %>

      <%  if @return_student_id.present? %>
          <%= f.number_field :student_id,:value => @return_student_id, class: 'form-control' , placeholder: 'Student ID' %>

      <% elsif @new_student_id.present? %>
          <%= f.number_field :student_id,:value => @new_student_id , class: 'form-control' , placeholder: 'Student ID' %>
      <%else %>
          <%= f.number_field :student_id,:value => @edit_student_id, class: 'form-control' , placeholder: 'Student ID' %>
      <%end%>
    </div>

    <div class="field">
      <style>
        table tr td{
          border: 1px solid #eeeeee;
        }
        .media-object{
          border-radius: 100%;
        }
        .checkbox{
          width: 160px;
        }
      </style>

      <h4>Please Select an Available Certifying Official</h4>
      <% @current_staff.each do |staff| %>
          <table class="table-bordered table-condensed" width="50%;">
            <tr>
              <td>
                <div class="media">
                  <div class="media-left">
                    <a href="#">
                     <%= image_tag("#{staff.avatar_url().to_s}",:class => "img_round" ) %>
                    </a>
                  </div>
                  <div class="media-body">
                    <h4 class="media-heading"><%= staff.set_fullname%></h4>
                    <p><%= staff.benefit_assigned %></p>
                  </div>
                </div>
              </td>
              <td >
                <div class="checkbox">
                  <%= label "#{staff.certifier_id}" ,  "#{staff.set_fullname}" do %>
                      <input type="radio" name="student_visit[<%= :certifier_id %>]" value=<%= staff.certifier_id %>>
                  <%end%>
                </div>
              </td>
            </tr>
          </table>
      <%end%>
    </div>



    <div class="[ form-group ]">
      <!--<input type="checkbox" name="fancy-checkbox-default" id="fancy-checkbox-default" autocomplete="off" />-->
      <%= f.check_box :isSignedin,  :id= => "fancy-checkbox-default", :autocomplete => "off" %>
      <div class="[ btn-group ]">
        <%= label_tag('fancy-checkbox-default', :class => "[ btn btn-default ]" ) do%>
            <span class="[ glyphicon glyphicon-ok ]"></span>
            <span>Â </span>
        <%end%>
        <%= label_tag('fancy-checkbox-default', :class => "[ btn btn-default active ]" ) do%>
           I want to Sign In

        <%end%>
      </div>
      <span style="color: red;">***Must Be Checked</span>
    </div>



    <div class="field">
      <%= f.label 'Please Tell Us Your Reason For Visiting Today' %>
      <%= f.collection_select :reason_for_visit_id, ReasonForVisit.all, :id, :visit_reason_name, {:include_blank => true} %>
    </div>

    <div class="field">
      <%= f.label 'Addiotionl Notes' %>
      <%= f.text_area :service_requested, rows: '5', cols: '10',  class: "form-control"%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
