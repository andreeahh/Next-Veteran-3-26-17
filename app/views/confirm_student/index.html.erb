<h1 class="page-title">Confirm your contact info.</h1>

<div class="contact-card">
  <div class="avatar"><i class="fa fa-user-circle-o" aria-hidden="true"></i></div>
<h3 class="contact-name"><%= @student_first_name%>&nbsp;<%= @student_last_name %></h3>
<ul class="contact-list">
  <li class="contact-item">Student ID:  &nbsp; <%= @student_id %></li>
  <li class="contact-item">Email: &nbsp; <%= @student_email %></li>
</ul>
<div class="contact-links-container">
  <ul class="link-list">
    <li class="link-list-item"> <%=link_to('Confirm this is\'nt you', student_kiosk_index_path,  :class => 'btn btn-default') %></li>
    <li class="link-list-item"><%= link_to('Confirm this is you', new_student_visit_path, :class => 'btn btn-default') %></li>



  </ul>
</div>
</div>


